.log-list {
  display: flex;
  flex-direction: column;
  background: url(../../resources/guide-bg.png);
  background-position: left top;
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  justify-content: center;
}
.log-item {
  background-color: #ffffff; 
  border-radius: 5rpx; 
  margin-left: 20rpx; 
  margin-right: 20rpx; 
  margin-top: 20rpx; 
  margin-bottom:20rpx; 
  align-self: stretch;
  align-items: center
}
.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.row1{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  height: 205rpx;
}
.row2{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 55rpx;
}
.row3{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 55rpx;
}
.team-icon-container{
  display: flex;
  flex:5;
  flex-direction: column; 
  justify-content: center; 
  align-items: center;
}
.vs-text-container{
  flex:1; 
  align-items: center;
  display: flex;
}
.vs-text{
  flex:1; 
  align-self: center;
  font-size: 32rpx;
  color: #cccccc;
  text-align: center;
}
.team-name-text {
  font-size: 25rpx;
  text-align: center;
}
.team-icon {
  width: 120rpx; 
  height: 120rpx;
}
.league-text {
  font-family: Roboto;
  font-size: 21rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: 0.2rpx;
  text-align: center;
  color: #5b5b5b;
}
.matchtime-text {
  font-family: Roboto;
  font-size: 18rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: 0.2rpx;
  text-align: center;
  color: #999999;
}
.separator {
	height: 2rpx;
  background-color: #eeeeee;
  align-self: stretch;
}
.predictionPrecentage {
  display: flex;
  flex-direction: row;
	align-items:center;
	justify-content:center;
}
.red-text{
  font-size: 25rpx; 
  color:#f68a1e;
}
.prediction-text{
  font-size: 25rpx; 
  color:#002a4e;
}