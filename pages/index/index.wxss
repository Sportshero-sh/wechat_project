/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: lightcyan;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.user-container {
  width: 100%;
  background-color: darkviolet;
}

.input-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 5px;
  background-color: lightgreen;
}

.text {
  background-color: bisque;
}

.input {
  padding: 10;
  border: 2px solid #ebebeb;
  width: 75%;
  background-color: paleturquoise;
}
