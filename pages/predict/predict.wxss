.background{
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}
.head{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  justify-content: space-around;
  width: 100%;
}
.head-item-container{
  display: flex;
  flex: 3;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.head-btn-container{
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.head-icon-coin{
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.head-icon-ticket{
  width: 112rpx;
  height: 64rpx;
  margin-right: 20rpx;
}
.head-text{
  font-size: 25rpx; 
  color:#f5f5f5;
  font-weight:bold;
  text-align: center;
}
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 1000rpx;
}
.swiper-item{
  display: flex;
  flex : 1;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.content-left{
  display: flex;
  flex : 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.content-center{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.content-right{
  display: flex;
  flex : 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.buy-btn{
  border-radius: 8rpx;	
  background-color: #ef5421; 
  font-size:25rpx;
  color: #ffffff;
  width : 120rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.problem-text{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:40rpx;
  color: #ffffff;
  text-align: center;
}
.exp-text{
  font-size: 25rpx;
  color: #cccccc;
  text-align: center;
}
.row1{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 205rpx;
  width: 100%;
}
.row2{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.row3{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}
.row4{
  align-items: center;
  flex-direction: row;
  display: flex;
  width: 100%;
}
.row5{
  width: 80%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  background-color: #ef5421;
  opacity: 0.5;
}
.team-icon-container{
  display: flex;
  flex:1;
  flex-direction: column; 
  justify-content: center; 
  align-items: center;
}
.vs-text-container{
  flex:1;
  flex-direction: column;
  justify-content: center; 
  align-items: center;
  display: flex;
}
.vs-text{
  align-self: center;
  font-size: 32rpx;
  color: #cccccc;
  text-align: center;
}
.team-name-text {
  font-size: 25rpx;
  text-align: center;
  color:#f5f5f5;
}
.team-icon {
  width: 120rpx; 
  height: 120rpx;
  margin-bottom: 15rpx;
}
.league-text {
  font-family: Roboto;
  font-size: 21rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: 0.2rpx;
  text-align: center;
  color: #5b5b5b;
}
.matchtime-text {
  font-family: Roboto;
  font-size: 21rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  letter-spacing: 0.2rpx;
  text-align: center;
  color: #999999;
}
.predictionPrecentage {
  display: flex;
  flex-direction: row;
	align-items:center;
	justify-content:center;
  height: 55rpx;
}
.red-text{
  font-size: 25rpx; 
  color:#f68a1e;
}
.light-blue-text{
  font-size: 25rpx; 
  color:#44b0d2;
}
.prediction-text{
  font-size: 25rpx; 
  color:#002a4e;
}
.win-text{
  font-size: 25rpx; 
  color:#f68a1e;
}
