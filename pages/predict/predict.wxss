  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.predict-btn-container{
  flex : 1;
  flex-direction: row;
  justify-content: center; 
  align-items: center;
  display: flex;
}
.predict-btn{
  width: 250rpx;
  height: 55rpx;
  display: flex;
  border-radius: 8rpx;	
  background-color: #ef5421; 
  font-size:25rpx;
  align-items: center;
  justify-content: center;
  color: #ffffff;
